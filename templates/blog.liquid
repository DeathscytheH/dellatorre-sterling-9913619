{% paginate blog.articles by settings.pagination_limit %}
<div id="blog">
  <style>
    /* centered columns styles */
    .row-centered {
        text-align:center;
    }
    .col-centered {
        display:inline-block;
        float:none;
        /* reset the text-align */
        text-align:left;
        /* inline-block space fix */
        margin-right:-4px;
    }
    .formItems input{
      
      border-radius:25px;
      width:90%;
    } 
    .formItems textarea{
      width: 90%;
      border-radius:15px;
    }
    .formItems {
      margin-left:5%;
    }
    @media (max-width: 900px) { 
      #hide { 
        display:none;
      } 
    }
    .article{
      color: black;
    }
    
    /*@media (max-width: 1095px) { 
      #hide { 
        
        display:inline-block;
        float:none;                     */
        /* reset the text-align */
      /*  text-align:left; */
        /* inline-block space fix */
        /*margin-right:-4px;
        
      } 
    }*/
  
  </style>
  
  <div class="row row-centered" 
       style="color:#fff;
              background-image:url(https://cdn.shopify.com/s/files/1/0605/4057/t/2/assets/bgBlog.jpg);
              background-size:cover;">
  
    <div class="col-md-6 col-centered" style="
              background-color:#ffffff; width:70%;
              background-size:cover;">

  <div class="row title">
    <div class="col-md-6">
      <h1></h1>
    </div> 
  </div> 
    
  <!-- Begin content -->
  <div class="row">
    <div class="span9 articles">
      {% for article in blog.articles %}
      <div class="article">
        <h1 style="font-size:25px;">
          <a href="{{ article.url }}">{{ article.title }}</a>
          <br> 
          <span class="date" style="display: block;">
            {{ article.published_at | date: "%B %d %Y" }}
            {% if article.comments_enabled? and article.comments_count > 0 %}
            <small>
              <a href="{{ article.url }}#comments">{{ article.comments_count }} {{ article.comments_count | pluralize: "Comment", "Comments" }}</a>
            </small>
            {% endif %}
          </span>
        </h1>
        {{ article.excerpt_or_content }}
      </div>
      <hr class="divider" />
      {% endfor %}
    </div>
    
    <!-- Begin sidebar 
    {% include 'blog-sidebar' %}-->
    <!-- End sidebar -->
    
  </div>
  <!-- End content -->
    </div>
  </div>
</div>

{% include 'pagination' %}
{% endpaginate %}