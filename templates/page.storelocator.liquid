                "galeria5.jpg",
                "galeria6.jpg"];
    
  var Items = ['item1',
  			   'item2', 
               'item3',
               'item4'];
                 
  window.onload = function() {
                    for (i = 0; i < Items.length; i++) {
                       ruta = 'https://cdn.shopify.com/s/files/1/0605/4057/t/2/assets/'
                        +Images[i];
                       Item = document.getElementById(Items[i]);
                       Item.style.backgroundImage = "url("+ruta+")";
                    }
  };
  
  function changeImg(str){
    
    Item = document.getElementById(str).style.backgroundImage;
    Prev = document.getElementById("previewImg");
    
    
    Prev.style.backgroundImage = Item;
  }
  
  
    
  function next(){
    Temp = Images;

    for(i=0; i< Images.length; i++){
      if(i == Images.length-1)
        Images[i] = Temp[0];
      else 
        Images[i] = Temp[i+1];
    }
    
    
  	 for (i = 0; i < Items.length; i++) {
       ruta = 'https://cdn.shopify.com/s/files/1/0605/4057/t/2/assets/'
       +Images[i];
        Item = document.getElementById(Items[i]);
        Item.style.backgroundImage = "url("+ruta+")";
     }
  }
  
  function prev(){
    Temp = Images;

    for(i=Images.length-1; i>=0 ; i--){
      if(i == 0)
        Images[i] = Temp[5];
      else 
        Images[i] = Temp[i-1];
    }
    
    
  	 for (i = 0; i < Items.length; i++) {
       ruta = 'https://cdn.shopify.com/s/files/1/0605/4057/t/2/assets/'
       +Images[i];
        Item = document.getElementById(Items[i]);
        Item.style.backgroundImage = "url("+ruta+")";
     }
  
  }
  function check4Null(){
    var n = 0;
    for (i = 0; i < Items.length; i++) {
      RR = document.getElementById(Items[i]);
      if(computedStyle(RR,'display') == 'none') n+=1;
    }
    return n;
  }
  
  var computedStyle = function (el,style) {
    var cs;
    if (typeof el.currentStyle != 'undefined'){
        cs = el.currentStyle;
    }
    else {
        cs = document.defaultView.getComputedStyle(el,null);
    }
    return  cs[style];
}
  function anterior(){
   anterior = null;
   pEl = document.getElementById("item1");
   rec = computedStyle(pEl,'backgroundImage');
   anterior = rec.slice(67,68);
   return anterior -1;
  }
</script>